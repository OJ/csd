<header class="subhead">
  {{#if is_current}}
  <h1>Your activity</h1>
  <p class="lead">What have you been up to...</p>
  {{else}}
  <h1>{{user_name}}'s activity</h1>
  <p class="lead">Check out what {{user_name}} has been up to...</p>
  {{/if}}
</header>
<section>
  <div class="page-header">
    <h1>Snippets <small>... what's hot and what's not.</small></h1>
  </div>
  <div class="row">
    <div class="span8">
      <table class="table table-bordered table-striped">
        <thead>
          <tr>
            <th>Title</th>
            <th>Submitted</th>
          </tr>
        </thead>
        <tbody>
        {{#each snippets}}
          <tr>
            <td><a href="#snippet/{{this.key}}">{{this.title}}</a></td>
            <td>{{this.created}}</td>
          </tr>
        {{/each}}
        </tbody>
      </table>
    </div>
  </div>
  {{#if has_pages}}
  <div class="row">
    <div class="span8">
      <div class="pagination pagination-small">
        <ul>
          {{#each pages}}
          <li{{#if this.current}} class="active"{{/if}}><a href="#user/{{../user_id}}/{{this.index}}">{{this.label}}</a></li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
  {{/if}}
</section>
